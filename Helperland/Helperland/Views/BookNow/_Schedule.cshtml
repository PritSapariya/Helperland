@{
    Layout = null;
}


<!-- Schedule & Plan Section Starts -->

    <div class="row d-lg-none">
        <span class="step-title">Schedule & Plan</span>
        <p class="hr-line"></p>
    </div>
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                <label class="form-label">When do you need the cleaner?</label>
            </div>
            <div class="row form-group">
                <div class="col-7">
