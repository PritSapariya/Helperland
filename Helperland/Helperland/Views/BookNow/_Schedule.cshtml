                                <img src="~/images/extra-service-inside-cabinet.png" alt="">
                            </div>
                        </div>
                        <div class="extra-service-title mb-4">Inside cabinets</div>
                    </div>
                </label>
                <label class="form-label">
                    <input class="extra-service-checkbox" type="checkbox" name="extraservice" id="extra-service-inside-fridge" value="@ViewBag.ExtraServiceInsideFridge" />
                    <div class="extra-service-wrapper text-center">
                        <div class="img-container mb-2">
                            <div class="img-wrapper">
                                <img src="~/images/extra-service-inside-fridge.png" alt="">
                            </div>
                        </div>
                        <div class="extra-service-title mb-4">Inside fridge</div>
                    </div>
                </label>
                <label class="form-label">
                    <input class="extra-service-checkbox" type="checkbox" name="extraservice" id="extra-service-inside-oven" value="@ViewBag.ExtraServiceInsideOven" />
                    <div class="extra-service-wrapper text-center">
                        <div class="img-container mb-2">
                            <div class="img-wrapper">
                                <img src="~/images/extra-service-inside-oven.png" alt="">
                            </div>
                        </div>
                        <div class="extra-service-title mb-4">Inside oven</div>
                    </div>
                </label>
                <label class="form-label">
                    <input class="extra-service-checkbox" type="checkbox" name="extraservice" id="extra-service-inside-laundry" value="@ViewBag.ExtraServiceInsideLaundry" />
                    <div class="extra-service-wrapper text-center">
                        <div class="img-container mb-2">
                            <div class="img-wrapper">
                                <img src="~/images/extra-service-inside-laundry.png" alt="">
                            </div>
                        </div>
                        <div class="extra-service-title mb-4">Laundry wash & dry</div>
                    </div>
                </label>
                <label class="form-label">
                    <input class="extra-service-checkbox" type="checkbox" name="extraservice" id="extra-service-inside-windows" value="@ViewBag.ExtraServiceInsideWindows" />
                    <div class="extra-service-wrapper text-center">
                        <div class="img-container mb-2">
                            <div class="img-wrapper">
                                <img src="~/images/extra-service-interior-windows.png" alt="">
                            </div>
                        </div>
                        <div class="extra-service-title mb-4">Inside cabinets</div>
                    </div>
                </label>


            </div>
        </div>
        <p class="hr-line"></p>
    </div>
    <div class="row">
        <div class="col-12">
            <label class="form-label">Comments</label>
        </div>
        <div class="col-12 form-group">
            <textarea class="form-control" placeholder="Comments" id="comments"></textarea>
            <span class="text-danger"></span>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="haspets" value="1" id="hasPets">
                <label class="form-check-label" for="hasPets">
                    I have pets at home.
                </label>
            </div>
        </div>
        <p class="hr-line"></p>
    </div>
    <div class="d-flex flex-row-reverse">
        <input type="button" class="col-3 btn btn-primary" value="Continue" id="step2Complete"/>
    </div>


<script>

    $().ready(() => {

        var _baseTimeForService = 3.0;
        var _basePayment = 50;

        $("#section2").show();

        $("#step2").click(() => {

            $(".nav-link").removeClass("filled");
            $(".nav-link").removeClass("active");
            $("#section2").show();
            $("#step1").addClass("filled");
            $("#step2").addClass("active");
            $("#step3").addClass("disabled");
            $("#step4").addClass("disabled");
            $("#section3").empty();
            $("#section3").hide();
            $("#section4").empty();
            $("#section4").hide();

        });

        $("#serviceDate").change(() => setDateInPaymentSummary());

        $("#serviceStartTime").change(() => {

            var startTime = $("#serviceStartTime").val();
            var startHour = Math.floor(startTime);
            var startMinute = startTime - startHour;

            if (startMinute > 0) {
                minute = "30";
            }
            else {
                minute = "00";
            }

            $("#serviceStartTimeSummary").text(startHour + ":" + minute);
       
        });

        $("#serviceBaseTime").change(() => {

            //console.log("Base time changed");

            _baseTimeForService = parseFloat($("#serviceBaseTime").val());

            $("#baseTimeSummary").text(_baseTimeForService + " Hrs");
            finalTimeCalculations();

        });

        $(".extra-service-checkbox").change(() => {

            $(".extraServiceInfo").hide();

            var extraServiceIdArr = getExtraServiceIdArr();
            extraServiceIdArr.length > 0 ? $("#extraTitle").show() : $("#extraTitle").hide();

            extraServiceIdArr.forEach((value, index) => {
                let targetId = "#summaryExtraService" + value;
                $(targetId).show();
            });

            finalTimeCalculations();

        });

        $("#step2Complete").click(() => {
            stepOn("#step2", "#step3", "#section2");
            $("#section3").load("/BookNow/GetAddressPage");
        });

        const stepOn = (firstStep, secondStep, section) => {

            $(section).hide();
            $(firstStep).removeClass("active");
            $(firstStep).addClass("filled");
            $(secondStep).addClass("active");
            $(secondStep).removeClass("disabled");

        };

        const setDateInPaymentSummary = () => {

            var date = new Date($("#serviceDate").val());

            var day = ("0" + date.getDate()).slice(-2);
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var year = date.getFullYear();

            $("#serviceDateSummary").text(day + "/" + month + "/" + year);
        };

        const getExtraServiceIdArr = () => {
            var extraServiceIdArr = [];
            var obj = $('input[name="extraservice"]:checked');

            for (let i = 0; i < obj.length; i++) {
                let _id = parseInt($(obj[i]).val());
                extraServiceIdArr.push(_id);
            }

            return extraServiceIdArr;
        };

        const finalTimeCalculations = () => {

            var customExtraSevicesArr = getExtraServiceIdArr().length;

            $("#totalServiceTimePaymentSummary").text((_baseTimeForService + (customExtraSevicesArr * 0.5)) + " Hrs");
            var _time = `#serviceBaseTime option[value="${(_baseTimeForService + (customExtraSevicesArr * 0.5))}"]`;

            $('#serviceBaseTime option').removeAttr('selected');
            $(_time).attr('selected', 'selected');

            $("#totalServiceTimePaymentSummary").text(parseFloat($(_time).val()) + " Hrs");

            $('.text-payment').text((_basePayment + ((_baseTimeForService + (customExtraSevicesArr * 0.5)) - 3.0) * 10) + " €");
            console.log((_basePayment + (((_baseTimeForService + (customExtraSevicesArr * 0.5)) - 3.0) * 10)) + " €");
        };

    });

</script>                    
        