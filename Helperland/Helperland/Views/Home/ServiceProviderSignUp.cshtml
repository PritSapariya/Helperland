@{
    ViewData["Title"] = "Service Proider SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel='stylesheet' href="~/css/sp-sign-up.css">

<main>
    <section class="hero-banner-section" style="background-image: url(/images/become-a-pro-banner.png); ">
        <div class="form-wrapper">
            <div class="form-title">
                <h3>Register Now!</h3>
            </div>
            <form class="form-group" action="?" method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="First Name">
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Last Name">
                </div>
                <div class="input-group mb-3">
                    <input type="email" class="form-control" placeholder="Email Address">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">+46</span>
                    <input type="text" class="form-control" placeholder="Mobile Number">
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Password">
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Confirm Password">
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        I accept <a href="#" class="link">terms and conditions</a> & <a href="#" class="link">privacy policy</a>
                    </label>
                </div>
                <div class="input-group">
                    <button type="submit" class="btn btn-primary m-auto">Getting Started <img src="~/images/arrow-white.png" alt=""></button>
                </div>

            </form>
        </div>
    </section>

    <!-- How it Works Section Starts -->
    <section class="work-process-section">
        <div class="left-bg"><img src="~/images/blog-left-bg.png" alt="" srcset=""></div>
        <div class="right-bg"><img src="~/images/blog-right-bg.png" alt="" srcset=""></div>
        <div class="container">
            <h1 class="text-center">How it works</h1>
            <div class="work-subsection d-flex align-items-center justify-content-between">
                <div class="work-desc">
                    <h2>Register yourself</h2>
                    <div>Provide your basic information to register<br>yourself as a service provider.</div>
                    <span>Read more<img src="~/images/shape-2.png" alt="" srcset=""></span>
                </div>
                <div class="img-section">
                    <img src="~/images/group-18-1.png" alt="">
                </div>
            </div>
            <div class="work-subsection d-flex align-items-center justify-content-between">
                <div class="img-section">
                    <img src="~/images/new-group-18-2.png" alt="">
                </div>
                <div class="work-desc">
                    <h2>Complete service</h2>
                    <div>Accept service requests from your customers<br>and complete your work.</div>
                    <span>Read more<img src="~/images/shape-2.png" alt="" srcset=""></span>
                </div>
            </div>
            <div class="work-subsection d-flex align-items-center justify-content-between">
                <div class="work-desc">
                    <h2>Complete service</h2>
                    <div>Accept service requests from your customers<br>and complete your work.</div>
                    <span>Read more<img src="~/images/shape-2.png" alt="" srcset=""></span>
                </div>
                <div class="img-section">
                    <img src="~/images/group-18-4.png" alt="">
                </div>
            </div>
        </div>
    </section>
    <!-- How it Works Section Ends -->
</main>