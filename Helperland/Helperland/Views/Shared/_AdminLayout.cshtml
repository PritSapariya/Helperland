<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] - Helperland</title>

    @* Bootstrap CDN links *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    @* JS CDN files *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src='~/js/select2.full.min.js' type='text/javascript'></script>

    @* Custom CSS files *@
    <link href="~/css/select2.css" rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/admin/admin-navbar.css">

</head>
<body>

    <!-- Admin Navbar Starts -->
    <header>
        <nav class="navbar fixed-top">
            <div class="container-fluid d-flex">
                <a class="navbar-brand p-0" asp-action="Index" asp-controller="Home"><img src="~/images/admin-logo.png" alt=""></a>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link pe-none" href="#"><img src="~/images/admin-user.png" alt=""><h6>@ViewBag.Name</h6></a>
                    </li>
                    <li class="nav-item m-auto">
                        <a class="nav-link" asp-action="Logout" asp-controller="Home"><img src="~/images/logout.png" alt=""></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Admin Navbar Ends -->

    <main>
        <!-- Side Navbar Starts -->
        <aside>
            <ul>
                <li><a asp-action="ServiceManagement" asp-controller="Admin">Service Requests</a></li>
                <li><a asp-action="UserManagement" asp-controller="Admin">User Management</a></li>
            </ul>
        </aside>
        <!-- Side Navbar Ends -->

        <div class="main-wrapper">
            @RenderBody()
        </div>


    </main>
        <!-- Navbar Current Page setup -->
        <script>

            var pageId = $('#navbarCurrentID').val();
            var navbarArr = $('#sideNavbarList a');
            $('#sideNavbarList a').removeClass('active');
            $(`#sideNavbarList a:nth-child(${pageId})`).addClass('active');

        </script>
        <!-- ------------------------- -->
        <!-- Footer Section Ends -->
        @* Custom JS File *@
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)

        <!-- DataTable Script and CSS Starts -->
        <script>
            $(document).ready(() => {
                $('#datatable').dataTable();
                $('#datatable_filter').hide();
                $(".dataTables_info").hide();
            });
        </script>
        <style>
            /* Datatable Style Starts */
            .custom {
                position: relative;
            }

            .dataTables_length {
                position: absolute;
                bottom: -33px;
            }

            .dataTables_paginate {
                position: absolute;
                bottom: -35px;
                right: 15px;
            }

            .dataTables_paginate .paginate_button {
                cursor: pointer;
                color: #646464;
                background-color: #d1cdcd91;
                font-weight: 500;
                display: inline-block;
                text-align: center;
                height: 35px !important;
                text-align: center;
                align-items: center;
                width: 35px !important;
                border-radius: 35px;
                margin-left: 15px;
                padding-top: 8px;
                line-height: 1;
            }

            .dataTables_paginate .paginate_button.current {
                color: #1D7A8C;
                border: 1px solid #1D7A8C;
            }

            .dataTables_paginate > a.paginate_button {
                font-size: 0;
                display: none;
            }

            /* Datatable Style Ends */
        </style>
        <!-- DataTable Script and CSS Ends -->

        <script>

            $(document).ready(() => {

                // Initialize select2
                $("#selUser").select2();
                $("#customerList").select2();
                $("#serviceProviderList").select2();

            });
        </script>

</body>
</html>
