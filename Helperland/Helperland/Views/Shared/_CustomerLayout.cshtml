<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] - Helperland</title>

    @* Bootstrap CDN links *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    @* JS CDN files *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    @* Custom CSS files *@
    <link href="~/css/static-page-navbar.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />

</head>
<body>
    <!-- Main Navbar Starts -->
    <section class="header-section">
        <header class="container-fluid">

            <nav class="navbar navbar-light fixed-top">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-small.png" alt="">
                </a>
                <ul class="nav justify-content-end d-none d-lg-flex">
                    <li class="nav-item btn-border">
                        <a class="nav-link" asp-action="Index" asp-controller="BookNow">Book now</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Prices">Prices & services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Warranty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>

                    <li class="nav-item icon notification-icon">
                        <a class="nav-link" href="#">
                            <img src="~/images/icon-notification.png" alt="Notification icon" srcset="">
                        </a>
                    </li>
                    <li class="nav-item dropdown icon profile-icon">
                        <button class="nav-link dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/user.png" alt="Notification icon" srcset="">
                            <img class="arrow" src="~/images/sp-arrow-down.png" alt="">
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <div class="dropdown-item side-navbar-welcome-msg" href="#">
                                    Welcome,<br>
                                    <b>@ViewBag.Name</b>
                                </div>
                            </li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Customer">My Dashboard</a></li>
                            <li><a class="dropdown-item" asp-action="MySettings" asp-controller="Customer">My Settings</a></li>
                            <li><a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav justify-content-end d-lg-none">
                    <li class="nav-item btn-border" id="hamburger">
                        <img src="~/images/hamburger.svg" alt="" class="nav-link">
                    </li>
                </ul>

            </nav>

            <!-- Side Navbar Starts -->
            <div class="side-navbar-wrapper" id="side-navbar-model">
                <div class="wrapper-background" id="side-navbar-wrapper">
                    <div class="side-navbar" id="side-navbar-menu">
                        <div class="side-navbar-welcome-msg">
                            Welcome,<br>
                            <b>@ViewBag.Name</b>
                        </div>
                        <div class="nav-container">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Customer">Dashboard</a></li>
                                <li><a href="#" class="active">Service History</a></li>
                                <li><a href="#">Service Schedule</a></li>
                                <li><a href="#">Favourite Pros</a></li>
                                <li><a href="#">Invoices</a></li>
                                <li><a asp-action="MySettings" asp-controller="Customer">My Settings</a></li>
                                <li><a asp-action="Logout" asp-controller="Home">Logout</a></li>
                            </ul>
                        </div>
                        <div class="nav-container">
                            <ul>
                                <li><a asp-action="Index" asp-controller="BookNow">Book Now</a></li>
                                <li><a asp-controller="Home" asp-action="Prices">Prices & services</a></li>
                                <li><a href="#">Warranty</a></li>
                                <li><a href="#">Blog</a></li>
                                <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Navbar Ends -->

            <div class="welcome-msg">
                <h2 class="text-center">Welcome, <b>@ViewBag.Name</b></h2>
            </div>

        </header>
    </section>
    <!-- Main Navbar Ends -->
    <!-- Main Content Starts-->
    <section class="service-history customer">
        <div class="container-fluid">
            <div class="row">
                <div class="left d-none d-lg-block col-2">
                    <div class="list-group" id="sideNavbarList">
                        <a asp-action="Index" asp-controller="Customer" class="list-group-item list-group-item-action active">Dashboard</a>
                        <a asp-action="ServiceHistory" asp-controller="Customer" class="list-group-item list-group-item-action">Service History</a>
                        <a href="#" class="list-group-item list-group-item-action">Service Schedule</a>
                        <a href="#" class="list-group-item list-group-item-action">Favourite Pros</a>
                        <a href="#" class="list-group-item list-group-item-action">Invoices</a>
                        <a href="#" class="list-group-item list-group-item-action">Notifications</a>
                    </div>
                </div>
                <div class="right col-lg-10 custom">

                    @RenderBody()

                </div>
            </div>
        </div>
    </section>



    <!-- Main Content Ends -->
    <!-- Footer Section Starts -->
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/images/footer-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="About">About</a></li>
                            <li><a href="#">Testimonials</a></li>
                            <li><a asp-controller="Home" asp-action="Faq">FAQs</a></li>
                            <li><a href="#">Insurance Policy</a></li>
                            <li><a href="#">Impressum</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#">
                                    <img src="~/images/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <img src="~/images/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container d-flex justify-content-center align-items-center">
                <p class="text-center">©2018 Helperland. All rights reserved. <a href="#">Terms and Conditions</a> | <a href="#">Privacy Policy</a></p>
            </div>
        </div>
    </footer>


    <!-- Navbar Current Page setup -->
    <script>

        var pageId = $('#navbarCurrentID').val();
        var navbarArr = $('#sideNavbarList a');
        $('#sideNavbarList a').removeClass('active');
        $(`#sideNavbarList a:nth-child(${pageId})`).addClass('active');

    </script>
    <!-- ------------------------- -->


    <!-- Footer Section Ends -->
    @* Custom JS File *@
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <!-- DataTable Script and CSS Starts -->
    <script>
        $(document).ready(() => {
            $('#datatable').dataTable();
            $('#datatable_filter').hide();
            $(".dataTables_info").hide();
        });
    </script>
    <style>
        /* Datatable Style Starts */
        .custom {
            position: relative;
        }

        .dataTables_length {
            position: absolute;
            bottom: -33px;
        }

        .dataTables_paginate {
            position: absolute;
            bottom: -35px;
            right: 15px;
        }

        .dataTables_paginate .paginate_button {
            cursor: pointer;
            color: #646464;
            background-color: #d1cdcd91;
            font-weight: 500;
            display: inline-block;
            text-align: center;
            height: 35px !important;
            text-align: center;
            align-items: center;
            width: 35px !important;
            border-radius: 35px;
            margin-left: 15px;
            padding-top: 8px;
            line-height: 1;
        }

        .dataTables_paginate .paginate_button.current {
            color: #1D7A8C;
            border: 1px solid #1D7A8C;
        }

        .dataTables_paginate > a.paginate_button {
            font-size: 0;
            display: none;
        }

        /* Datatable Style Ends */
    </style>
    <!-- DataTable Script and CSS Ends -->

</body>
</html>

